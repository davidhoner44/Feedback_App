<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.sdaproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:parentActivityName=".GameActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity
            android:name=".DeveloperActivity"
            android:label="@string/title_activity_developer"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".FeedbackActivity"
            android:parentActivityName=".QuestionActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".SignInActivity" />
        <activity
            android:name=".ViewFeedback"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".GameActivity"
            android:parentActivityName=".WelcomeActivity" />
    </application>

</manifest>